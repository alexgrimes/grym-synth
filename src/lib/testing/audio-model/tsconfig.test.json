{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "../../../",
    "outDir": "./dist",
    "rootDir": "../../../",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "../../../node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "../../../**/*.ts",
    "../../../**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}